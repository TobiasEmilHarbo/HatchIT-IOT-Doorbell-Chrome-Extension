rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }

    match /notifications/{ notification }
		{
      allow read: if true;
      allow write: if request.resource.data.notify == true || request.resource.data.notify == false;
    }
  }
}